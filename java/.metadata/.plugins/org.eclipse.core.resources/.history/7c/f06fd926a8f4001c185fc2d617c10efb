    <body>
        <h1>Manualizer : CRUD</h1>
        <h3 th:text="${title}">タイトル</h3>
        <!-- /* 登録・完了コメント */ -->
        <p th:if="${complete}" th:text="${complete}" style="color:blue"></p>

        <!-- /* Form */ -->
        <form method="POST" th:action="${quizForm.isReg}? @{/content/insert} : @{/content/update}" th:object="${contentForm}">

            <label>タイトル</label>
            <input type="text" class="form-control" placeholder="" th*field="*{title}">
            <br>
            <div th:if="${#fields.hasErrors('title')}" th:errors="*{title}" style="color:red"></div>

            <label>内容</label>
            <textarea rows="5" cols="50" th:field="*{content}"></textarea>
            <br>
            <div th:if="${#fields.hasErrors('content')}" th:errors="*{content}" style="color:red"></div>

            <input th:if="${id}" type="hidden" th:field="*{id}">
            <input type="submit" value="送信">

        </form>
    </body>
